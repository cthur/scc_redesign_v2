<%= tinymce %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<!--Load Script and Stylesheet -->

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date, class: "form-control", :id => :start %>
    <script type="text/javascript">
        $(function(){
            $('*[id=start]').appendDtpicker({"inline": true});
        });
    </script>
  </div>

 <div class="field form-group">
    <%= f.label :end_date %><br>
   <%= f.text_field :end_date, class: "form-control", :id => :end %>
       <script type="text/javascript">
        $(function(){
            $('*[id=end]').appendDtpicker({"inline": true});
        });
       </script>
  </div>

  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "tinymce form-control" %>
  </div>

  <div class="field checkbox">
    <%= f.label :all_day %>
    <%= f.check_box :all_day %>
  </div>

  <div class="field checkbox">
    <%= f.label :repeating %>
    <%= f.check_box :repeating %>
  </div>

  <div class="field form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :event_type %><br>
    <%= f.select :event_type , options_for_select(
      [
          ['General', 1],
          ['Holiday', 2],
          ['Dead Day', 3],
          ['Faculty Workday', 4],
          ['Finals', 5]
      ]
    ) %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
